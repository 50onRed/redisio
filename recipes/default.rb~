if node['redisio']['from'] == "source" 
  
  puts "installing redis from source"
  #install redis from source
  redisio_source "redis-server" do
    version '2.4.9'      
    action :install
  end

else
  #install redis from package
  package "redis-server" do
    action :install
 end 

end
